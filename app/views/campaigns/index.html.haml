.row
  .col-md-6
    %h1.title My Campaigns
    %table
      %tr
        %th Name
        %th User
        %th
          -if can? :create, Campaign
            %a{href: new_campaign_path}
              %span.glyphicon.glyphicon-plus
              New

      - @campaigns.each do |campaign|
        %tr
          %td
            %a{href: campaign_path(campaign)}
              = campaign.name
          %td= campaign.user
          %td
            - if can? :edit, campaign
              %a{href: edit_campaign_path(campaign)}
                %span.glyphicon.glyphicon-pencil
                Edit

    -if can? :create, Campaign
      %h3
        %a{href: new_campaign_path}
          %span.glyphicon.glyphicon-plus
          Create a Campaign


  .col-md-6
    %h1.title Public Campaigns

    %table
      %tr
        %th Name
        %th User
        %th Open?

      - @public_campaigns.each do |campaign|
        %tr
          %td
            %a{href: campaign_path(campaign)}
              = campaign.name
          %td= campaign.user
          %td= campaign.open




