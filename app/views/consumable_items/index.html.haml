-if can? :create, ConsumableItem
  .pull-right
    %a{href: new_consumable_item_path}
      %span.glyphicon.glyphicon-plus
%h1.title Listing Consumable Items

%table
  %tr
    %th Name
    %th Desc
    %th Effects
    %th Weight
    %th Cost
    %th
      -if can? :create, ConsumableItem
        %a{href: new_consumable_item_path}
          %span.glyphicon.glyphicon-plus

  - @consumable_items.each do |consumable_item|
    %tr
      %td= consumable_item.name
      %td= consumable_item.desc
      %td= consumable_item.effects
      %td= consumable_item.weight
      %td= consumable_item.cost
      %td
        %a{href: consumable_item_path(consumable_item)}
          %span.glyphicon.glyphicon-file
        - if can? :edit, consumable_item
          %a{href: edit_consumable_item_path(consumable_item)}
            %span.glyphicon.glyphicon-pencil
        - if can? :destroy, consumable_item
          %a{href: consumable_item_path(consumable_item), data: {method: :delete, confirm: "Are you sure you want to delete #{consumable_item}?"}}
            %span.glyphicon.glyphicon-trash


