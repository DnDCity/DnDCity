  %table.home1
    %th.home1= link_to 'Edit account', edit_user_registration_path
    %tr
    %th.home2= link_to 'Logout', destroy_user_session_path, :method=>'delete'
    %tr
    %th.home2= link_to 'Campaigns', campaigns_path
    %tr
