.pull-right
  %a{href: sizes_path}
    %span.glyphicon.glyphicon-list
  -if can? :create, Size
    %a{href: new_size_path}
      %span.glyphicon.glyphicon-plus
  - if can? :edit, @size
    %a{href: edit_size_path(@size)}
      %span.glyphicon.glyphicon-pencil
  - if can? :destroy, @size
    %a{href: size_path(@size), data: {method: :delete, confirm: "Are you sure you want to delete #{@size}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Size #{@size}
%p
  %b Name:
  = @size.name
%p
  %b Desc:
  = @size.desc

%h3 Races
- @size.races.each do |race|
  = link_to race, race
