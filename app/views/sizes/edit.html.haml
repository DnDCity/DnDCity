.pull-right
  %a{href: sizes_path}
    %span.glyphicon.glyphicon-list
  -if can? :read, Size
    %a{href: size_path}
      %span.glyphicon.glyphicon-file
  -if can? :create, Size
    %a{href: new_size_path}
      %span.glyphicon.glyphicon-plus
  - if can? :destroy, @size
    %a{href: size_path(@size), data: {method: :delete, confirm: "Are you sure you want to delete #{@size}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Editing Size #{@size}
= render 'form'
