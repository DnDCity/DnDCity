-if can? :create, SpellComponentType
  .pull-right
    %a{href: new_spell_component_type_path}
      %span.glyphicon.glyphicon-plus
%h1.title Listing Spell Component Types

%table
  %tr
    %th Name
    %th Key
    %th Desc
    %th
      -if can? :create, SpellComponentType
        %a{href: new_spell_component_type_path}
          %span.glyphicon.glyphicon-plus

  - @spell_component_types.each do |spell_component_type|
    %tr
      %td= spell_component_type.name
      %td= spell_component_type.key
      %td= spell_component_type.desc
      %td
        %a{href: spell_component_type_path(spell_component_type)}
          %span.glyphicon.glyphicon-file
        - if can? :edit, spell_component_type
          %a{href: edit_spell_component_type_path(spell_component_type)}
            %span.glyphicon.glyphicon-pencil
        - if can? :destroy, spell_component_type
          %a{href: spell_component_type_path(spell_component_type), data: {method: :delete, confirm: "Are you sure you want to delete #{spell_component_type}?"}}
            %span.glyphicon.glyphicon-trash


