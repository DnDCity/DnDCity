.pull-right
  %a{href: spell_levels_path}
    %span.glyphicon.glyphicon-list
  -if can? :create, SpellLevel
    %a{href: new_spell_level_path}
      %span.glyphicon.glyphicon-plus
  - if can? :edit, @spell_level
    %a{href: edit_spell_level_path(@spell_level)}
      %span.glyphicon.glyphicon-pencil
  - if can? :destroy, @spell_level
    %a{href: spell_level_path(@spell_level), data: {method: :delete, confirm: "Are you sure you want to delete #{@spell_level}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Spell level #{@spell_level}
%p
  %b Spell:
  = @spell_level.spell
%p
  %b Character class:
  = @spell_level.character_class
%p
  %b Level:
  = @spell_level.level
