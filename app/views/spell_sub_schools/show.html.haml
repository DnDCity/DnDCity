.pull-right
  %a{href: spell_sub_schools_path}
    %span.glyphicon.glyphicon-list
  -if can? :create, SpellSubSchool
    %a{href: new_spell_sub_school_path}
      %span.glyphicon.glyphicon-plus
  - if can? :edit, @spell_sub_school
    %a{href: edit_spell_sub_school_path(@spell_sub_school)}
      %span.glyphicon.glyphicon-pencil
  - if can? :destroy, @spell_sub_school
    %a{href: spell_sub_school_path(@spell_sub_school), data: {method: :delete, confirm: "Are you sure you want to delete #{@spell_sub_school}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Spell sub school #{@spell_sub_school}
%p
  %b Name:
  = @spell_sub_school.name
%p
  %b Desc:
  = @spell_sub_school.desc
%p
  %b Spell school:
  = @spell_sub_school.spell_school
