-if can? :create, SpellSubSchool
  .pull-right
    %a{href: new_spell_sub_school_path}
      %span.glyphicon.glyphicon-plus
%h1.title Listing Spell Sub Schools

%table
  %tr
    %th Name
    %th Desc
    %th Spell school
    %th
      -if can? :create, SpellSubSchool
        %a{href: new_spell_sub_school_path}
          %span.glyphicon.glyphicon-plus

  - @spell_sub_schools.each do |spell_sub_school|
    %tr
      %td= spell_sub_school.name
      %td= spell_sub_school.desc
      %td= spell_sub_school.spell_school
      %td
        %a{href: spell_sub_school_path(spell_sub_school)}
          %span.glyphicon.glyphicon-file
        - if can? :edit, spell_sub_school
          %a{href: edit_spell_sub_school_path(spell_sub_school)}
            %span.glyphicon.glyphicon-pencil
        - if can? :destroy, spell_sub_school
          %a{href: spell_sub_school_path(spell_sub_school), data: {method: :delete, confirm: "Are you sure you want to delete #{spell_sub_school}?"}}
            %span.glyphicon.glyphicon-trash


