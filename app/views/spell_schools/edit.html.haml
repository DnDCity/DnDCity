.pull-right
  %a{href: spell_schools_path}
    %span.glyphicon.glyphicon-list
  -if can? :read, SpellSchool
    %a{href: spell_school_path}
      %span.glyphicon.glyphicon-file
  -if can? :create, SpellSchool
    %a{href: new_spell_school_path}
      %span.glyphicon.glyphicon-plus
  - if can? :destroy, @spell_school
    %a{href: spell_school_path(@spell_school), data: {method: :delete, confirm: "Are you sure you want to delete #{@spell_school}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Editing Spell school #{@spell_school}
= render 'form'
