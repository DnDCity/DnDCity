.pull-right
  %a{href: spell_schools_path}
    %span.glyphicon.glyphicon-list
  -if can? :create, SpellSchool
    %a{href: new_spell_school_path}
      %span.glyphicon.glyphicon-plus
  - if can? :edit, @spell_school
    %a{href: edit_spell_school_path(@spell_school)}
      %span.glyphicon.glyphicon-pencil
  - if can? :destroy, @spell_school
    %a{href: spell_school_path(@spell_school), data: {method: :delete, confirm: "Are you sure you want to delete #{@spell_school}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Spell school #{@spell_school}
%p
  %b Name:
  = @spell_school.name
%p
  %b Desc:
  = @spell_school.desc
