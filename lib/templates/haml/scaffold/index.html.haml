-if can? :create, <%= class_name %>
  .pull-right
    %a{href: new_<%= singular_table_name %>_path}
      %span.glyphicon.glyphicon-plus
%h1.title Listing <%= plural_table_name.titleize %>

%table
  %tr
<% for attribute in attributes -%>
    %th <%= attribute.human_name %>
<% end -%>
    %th
      -if can? :create, <%= class_name %>
        %a{href: new_<%= singular_table_name %>_path}
          %span.glyphicon.glyphicon-plus

  - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
    %tr
<% for attribute in attributes -%>
      %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
      %td
        %a{href: <%= singular_table_name %>_path(<%= singular_table_name %>)}
          %span.glyphicon.glyphicon-file
        - if can? :edit, <%= singular_table_name %>
          %a{href: edit_<%= singular_table_name %>_path(<%= singular_table_name %>)}
            %span.glyphicon.glyphicon-pencil
        - if can? :destroy, <%= singular_table_name %>
          %a{href: <%= singular_table_name %>_path(<%= singular_table_name %>), data: {method: :delete, confirm: "Are you sure you want to delete #{<%= singular_table_name %>}?"}}
            %span.glyphicon.glyphicon-trash


