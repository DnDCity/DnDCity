.pull-right
  %a{href: <%= plural_table_name %>_path}
    %span.glyphicon.glyphicon-list
  -if can? :read, <%= class_name %>
    %a{href: <%= singular_table_name %>_path}
      %span.glyphicon.glyphicon-file
  -if can? :create, <%= class_name %>
    %a{href: new_<%= singular_table_name %>_path}
      %span.glyphicon.glyphicon-plus
  - if can? :destroy, @<%= singular_table_name %>
    %a{href: <%= singular_table_name %>_path(@<%= singular_table_name %>), data: {method: :delete, confirm: "Are you sure you want to delete #{@<%= singular_table_name %>}?"}}
      %span.glyphicon.glyphicon-trash
%h1.title Editing <%= singular_table_name.humanize %> #{@<%= singular_table_name %>}
= render 'form'
